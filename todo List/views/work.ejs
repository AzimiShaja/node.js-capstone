        <div class="added">
          <%  if(locals.todoList){%>
           <% todoList.forEach((todoName) => {%>
                <input type="checkbox" name="checkbox">
                <p> <%= todoName %>  </p>
            <% }); %>
            <% }%>
            <input type="checkbox" name="checkbox">
            <p> play football  </p>
        </div>
    </div>
</div>
